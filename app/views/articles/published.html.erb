<h1>Доска объявлений </h1>

<table>
  <thead>
    <tr>
      <th>Creater</th>
      <th>Сreation time</th>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th>Category</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        
          <td><%= article.creater %></td>
          <td>Create: Hours - <%= ((Time.now - article.created_at)/3600).round %> Minute - <%= ((Time.now - article.created_at)/60).round %> Update: minuts - <%=((Time.now - article.updated_at)/60).round %></td>
          <td><%= article.title %>  </td>
          <td><%= article.description %></td>
          <td><%= image_tag article.image, :width => 100, :height => 100 %></td>
          <td><%= article.price %> $</td>
          <td><%= article.category %></td>
          <td><%= article.state %></td>
        
        <% if can? :update, @article %>
          
            <td><%= link_to 'Show', article %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :update, @article %>
  <%= link_to 'New Article', new_article_path %>
<% end %>



