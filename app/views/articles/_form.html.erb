<%= simple_form_for @article do |f| %>
  <%= f.input :title, :input_html => {:size => 20} %>
  <%= f.input :description, :input_html => {:size => 20} %>
  <%= f.input :image, :input_html => {:size => 20} %>
  <%= f.input :price, :input_html => {:size => 20} %>
  <%= f.input :category, collection: ['purchase',"currency","service","rent","sale"], prompt: "Select" %>
  <%= f.input :state, collection: ['pending_publication',"rejected","archive", "published"], prompt: "Select" %>
  <%= f.button :submit %>
<% end %>
